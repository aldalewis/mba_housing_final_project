<div class="page-header">
  <h1>
    Saved rentals
    <a href="/saved_rentals/new" class="btn btn-lg btn-success">New Saved rental</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Rental</th>
        <th>User</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @saved_rentals.each do |saved_rental| %>
      <tr>
        <td>
          <% if saved_rental.rental.present? %>
            <a href="/rentals/<%= saved_rental.rental.id %>">
              <%= saved_rental.rental.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if saved_rental.user.present? %>
            <a href="/users/<%= saved_rental.user.id %>">
              <%= saved_rental.user.id %>
            </a>
          <% end %>
        </td>
        <td><%= saved_rental.notes %></td>
        <td>
          <a href="/saved_rentals/<%= saved_rental.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == saved_rental.user %>
            <a href="/saved_rentals/<%= saved_rental.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_saved_rental/<%= saved_rental.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_rentals, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
