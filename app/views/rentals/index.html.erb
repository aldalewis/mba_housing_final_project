<div class="page-header">
  <h1>
    Rentals
    <a href="/rentals/new" class="btn btn-lg btn-success">New Rental</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "rentals_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :roommates_cont, "Roommates contains" %>
    <%= f.text_field :roommates_cont, :class => "form-control", :placeholder => "Roommates contains" %>
  </div>

<div class="form-group">
          <%= f.label :end_date, "End date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_dategteqPicker'>
                  <%= f.text_field :end_date_gteq, :class => "form-control", :placeholder => "End date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datelteqPicker'>
                  <%= f.text_field :end_date_lteq, :class => "form-control", :placeholder => "End date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#end_dategteqPicker').on("dp.change", function (e) {
                  $('#end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datelteqPicker').on("dp.change", function (e) {
                  $('#end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :date_available, "Date available" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='date_availablegteqPicker'>
                  <%= f.text_field :date_available_gteq, :class => "form-control", :placeholder => "Date available greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='date_availablelteqPicker'>
                  <%= f.text_field :date_available_lteq, :class => "form-control", :placeholder => "Date available less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#date_availablegteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#date_availablelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#date_availablegteqPicker').on("dp.change", function (e) {
                  $('#date_availablelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#date_availablelteqPicker').on("dp.change", function (e) {
                  $('#date_availablegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :rent_amount, "Rent amount" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :rent_amount_gteq, :class => "form-control", :placeholder => "Rent amount greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :rent_amount_lteq, :class => "form-control", :placeholder => "Rent amount less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :feature_cont, "Feature contains" %>
    <%= f.text_field :feature_cont, :class => "form-control", :placeholder => "Feature contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :bookmarks_notes_cont, "SavedRental notes contains" %>
      <%= f.text_field :bookmarks_notes_cont, :class => "form-control", :placeholder => "SavedRental notes contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/rentals" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#rentals_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Image</th>
        <th>Description</th>
        <th>Feature</th>
        <th>Rent amount</th>
        <th>Date available</th>
        <th>End date</th>
        <th>User</th>
        <th>Roommates</th>
        <th>Actions</th>
      </tr>

      <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.name %></td>
        <td><%= rental.address %></td>
        <td><img src='<%= rental.image %>' class='img-responsive'></td>
        <td><%= rental.description %></td>
        <td><%= rental.feature %></td>
        <td><%= rental.rent_amount %></td>
        <td><%= rental.date_available %></td>
        <td><%= rental.end_date %></td>
        <td>
          <% if rental.sublettor.present? %>
            <a href="/users/<%= rental.sublettor.id %>">
              <%= rental.sublettor.id %>
            </a>
          <% end %>
        </td>
        <td><%= rental.roommates %></td>
        <td>
          <a href="/rentals/<%= rental.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == rental.sublettor %>
            <a href="/rentals/<%= rental.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_rental/<%= rental.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @rentals, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>